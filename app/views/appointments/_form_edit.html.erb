<h2>Edit Version</h2>
<h2>Feed the
<%= @companionship.label %>
</h2>
<% if @appointment_date %>
<h3>
  <%= @appointment_date.strftime('%A %b %-d, %Y') %>
</h3>

<% end %>

<%= form_with(model: [ @companionship, @appointment], local: true) do |form| %>
  <input name="_method" type="hidden" value="patch" />

 <p>
   <%= form.hidden_field :date, value: @appointment[:date]%>
 </p>
 <p>
   <%= form.label :family %><br>
   <%= form.text_field :family, value: (@appointment ? @appointment[:family] : '')  %>
 </p>
 <p>
   <%= form.label :contact_info %><br>
   <%= form.text_field :contact_info, value: (@appointment ? @appointment[:contact_info] : '') %>
 </p>
 <p>
   <%= form.label :other_info %><br>
   <%= form.text_field :other_info, value: (@appointment ? @appointment[:other_info] : '') %>
 </p>

  <p>
    <%= link_to "Cancel", :back, {:class=>"btn btn-default"} %>
    <%= form.submit (@appointment ? "Update Appointment": "Create Appointment") %>
    <%# post or patch here....  %>
    <%= (link_to '<i class="fas fa-trash-alt"></i> Delete'.html_safe, companionship_appointment_path(@companionship,@appointment),
           method: :delete,
           data: {confirm: 'Are you sure you want to delete this appointment? This action cannot be undone'}
         ) if @appointment
    %>

  </p>
<% end %>
