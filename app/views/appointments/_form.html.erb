<h2>Feed the
<%= @companionship.label %>
</h2>
<% if @appointment_date %>
<h3>
  <%= @appointment_date.strftime('%A %b %-d, %Y') %>
</h3>
<% end %>

<%= form_with(model: [ @companionship, @companionship.appointments.build ], local: true) do |form| %>


 <p>
   <%= form.hidden_field :date, value: params[:date]%>
 </p>
 <p>
   <%= form.label :family %><br>
   <%= form.text_field :family %>
 </p>
 <p>
   <%= form.label :contact_info %><br>
   <%= form.text_field :contact_info %>
 </p>
 <p>
   <%= form.label :other_info %><br>
   <%= form.text_field :other_info %>
 </p>

 <p>
   <%= link_to "Cancel", :back, {:class=>"btn btn-default"} %>
   <%= form.submit %>
 </p>
<% end %>
